{
  "name": "react-template",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "build": "run-s build:*",
    "watch": "run-p watch:*",
    "build:js": "parcel build index.html",
    "watch:js": "parcel watch index.html",
    "watch:css": "TAILWIND_MODE=watch NODE_ENV=development postcss ./styles.css -o ./dist/styles.css -w --verbose",
    "build:css": "TAILWIND_MODE=build NODE_ENV=production postcss ./styles.css -o ./dist/styles.css --verbose"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^10.3.6",
    "parcel": "^2.0.0-rc.0",
    "postcss": "^8.3.8",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tailwindcss": "^2.2.16"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.0.1"
  }
}
